<div class="w-2/6 lg:w-5/12 bg-white shadow-lg rounded-lg p-8 mx-auto my-7">
  <h1 class="text-3xl font-bold mb-8 text-center bg-gradient-to-r from-blue-400 to-teal-500 text-transparent bg-clip-text">Change Password</h1>

    <%= form_with(model: current_user, url: password_path) do |form|%>
      <% if form.object.errors.any? %>
        <%= form.object.errors.full_messages.each do |error| %>
          <%= error %>
        <% end %>
      <% end %>

      <div class="inputBox w-full mb-4">
        
        <%= form.password_field :password_challenge, required: true, class: 'p-2' %>
        <%= form.label :password_challenge, "Current Password", class: 'font-semibold' %>
      </div>

      <div class="inputBox w-full mb-4">
        
        <%= form.password_field :password, required: true, class: 'p-2' %>
        <%= form.label :password, "New Password", class: 'font-semibold' %>
      </div>

      <div class="inputBox w-full mb-4">
        
        <%= form.password_field :password_confirmation, required: true, class: 'p-2' %>
        <%= form.label :password_confirmation, class: 'font-semibold' %>
      </div>

      <div class="cursor-pointer mx-auto w-min bg-gradient-to-r from-blue-400 to-teal-500 text-white px-4 py-2 rounded-full hover:bg-teal-500 transition duration-300 font-bold text-2xl my-5">
        <%= form.submit 'Update Password', class: 'cursor-pointer' %>
      </div>
    <% end %>
  </div>
</div>