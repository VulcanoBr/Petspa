<tr id="<%= dom_id appointment %>">
  <td class="border border-slate-300 bg-white text-left p-4"><%= appointment.status %></td>
  <td class="border border-slate-300 bg-white text-left p-4"><%= appointment.pet&.name %></td>
  <td class="border border-slate-300 bg-white text-left p-4"><%= appointment.pet&.breed %></td>
  <td class="border border-slate-300 bg-white text-left p-4"><%= appointment.pet&.kind %></td>
  <td class="border border-slate-300 bg-white text-left p-4"><%= appointment.start_at.strftime('%b %e, %Y at %l:%M %p') %></td>
  <td class="border border-slate-300 bg-white text-left p-4"><%= appointment.end_at.strftime('%b %e, %Y at %l:%M %p') %></td>
  <td class="border border-slate-300 bg-white text-left p-4"><%= appointment.appointment_type.name %></td>
  <td class="border border-slate-300 bg-white text-left p-4"><%= appointment.payments&.any? ? appointment.payments&.first.billing_status : "No required" %></td>
</tr>