<% if user_signed_in? %>
  <%= link_to 'Edit', edit_user_path(current_user) %>
  <%= link_to 'Log out', session_path(current_user), method: :delete, data: {
    turbo_method: :delete,
    turbo_confirm: 'Are you sure?'
  } %>
<% else %>
  <%= link_to 'Log in', new_session_path %>
  <%= link_to 'Sign up', new_user_path %>
<% end %>